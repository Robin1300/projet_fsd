{% extends "base.html.twig" %}

{% block body %}
    <h1 class="py-5">Bienvenue dans votre Agenda</h1>

    <div class="row">
        <h2>Les 5 prochains événements</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for e in incomingEvents %}
                    <tr>
                        <td>{{ e.name }}</td>
                        <td>{{ e.date | date('d/m/Y | H:i')}}</td>
                        <td>
                            <span class="description">cliquer ici</span>
                            <div class="d-none descriptionCard"><p >{{ e.description }}</p></div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/descriptions.js') }}"></script>
{% endblock %}